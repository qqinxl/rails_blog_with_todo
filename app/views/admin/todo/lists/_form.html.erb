<div class="group">
  <%= f.label :todo_tag_id, "Select one tag", :class => :label %>
  <%= f.select :todo_tag_id, @admin_todo_tag_names %>
</div>

<div class="group">
  <%= f.label :due_date, :class => :label %>
  <%= f.datetime_select :due_date, :class => 'datetime_select' %>
</div>

<div class="group">
  <%= f.label :title, :class => :label %>
  <%= f.text_field :title, :class => 'text_field' %>
  <span class="description">Ex: a simple text</span>
</div>

<div class="group">
  <%= f.label :description, :class => :label %>
  <%= f.text_area :description, :class => 'text_area' , :rows => "5" %>
  <span class="description">Ex: a simple text</span>
</div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "Save!") %> Save
  </button>
  <span class="text_button_padding"> or </span>
  <%= link_to "Cancel", admin_todo_lists_path,:id=>"cancel_new_admin_todo_list", :class => "text_button_padding link_button" %>
</div>
